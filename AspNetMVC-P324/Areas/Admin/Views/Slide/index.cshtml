@{
    Slider slider = Model;
}

<div class="container-fluid pt-4 px-4">
    <div class="row"  >
        <div class="col-md-12" >
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Slide</h6>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Title</th>
                            <th scope="col">Subtitle</th>
                            <th scope="col">Image</th>
                            <th scope="col">Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>@slider.Title</td>
                            <td>@slider.Subtitle</td>
                            <td>@slider.SignatureImage</td>
                            <td><a asp-action="Update" type="button" class="btn btn-warning ">Update</a></td>
                        </tr>
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
